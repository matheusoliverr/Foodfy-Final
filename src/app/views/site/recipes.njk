{% extends "site/layouts.njk" %}

{% block filter %}
{% include "site/parts/filter.njk" %}
{% endblock %}

{% block content %}

    <main class="pagination">
        {% if filter %}
        <h1 id="searching-filter">Buscando por "{{filter}}"</h1>
        {% endif %}
        <div class="recipes-listing">
            <section class="introduction-recipes extended">

                {% for recipe in recipes %}
                <div class="recipe-card">
                    <img class="recipe-img" id="{{recipe.id}}" src="{{recipe.files_path[0]}}" alt="{{recipe.title}}">
                    <p class="recipe-name">{{recipe.title}}</p>
                    {% for chef in chefs %}
                    {% if chef.id == recipe.chef_id %}
                    <p class="creator-name">Por {{chef.name}}</p>
                    {% endif %}
                    {% endfor %}

                    {% for user in users %}
                    {% if user.id == recipe.user_id %}
                    <p class="creator-name">Por {{user.name}}</p>
                    {% endif %}
                    {% endfor %}
                </div>
                {% endfor %}
                
            </section>

            <div class="paginate"
            data-page="{{pagination.page}}"
            data-total="{{pagination.total}}"
            data-filter="{{filter}}"
            ></div>
        </div>
    </main>

     

    {% endblock %}
